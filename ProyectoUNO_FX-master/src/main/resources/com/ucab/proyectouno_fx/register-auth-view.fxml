<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane style="-fx-background-color: skyblue;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ucab.proyectouno_fx.Controller.AuthenticationControllers.RegisterAuthController">
   <center>
      <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/UNO_Logo.png" />
                     </image>
                  </ImageView>
               </children>
            </HBox>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="12.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#onRegisterButtonPress" style="-fx-background-color: mediumseagreen; -fx-border-color: black;" text="Registrarse">
                     <font>
                        <Font name="Comic Sans MS Bold" size="12.0" />
                     </font></Button>
                  <Button mnemonicParsing="false" onAction="#onAuthButtonPress" style="-fx-background-color: cadetblue; -fx-border-color: black;" text="Autenticarse">
                     <font>
                        <Font name="Comic Sans MS Bold" size="12.0" />
                     </font></Button>
                  <Button mnemonicParsing="false" onAction="#onExitButtonPress" style="-fx-background-color: maroon; -fx-border-color: black;" text="Salir" textFill="#ffd87c">
                     <font>
                        <Font name="Comic Sans MS Bold" size="12.0" />
                     </font></Button>
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
   <padding>
      <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
   </padding>
</BorderPane>
